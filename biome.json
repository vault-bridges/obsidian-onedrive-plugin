{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["*.js", "data.json"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noConsole": {
					"options": {
						"allow": ["error", "warn", "info", "debug", "trace"]
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"lineWidth": 100,
			"semicolons": "asNeeded",
			"quoteStyle": "single"
		}
	}
}
